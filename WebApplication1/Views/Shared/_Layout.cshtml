<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <a @*class="navbar-brand"*@ @*href="#"*@>
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/img/DoITeasy.png" alt="" style="height:60px; width:200px"/>
                </a>
                @*<img src="~/img/DoITeasy.png" alt="" style="height:60px; width:200px">*@
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
               
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">

                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">@Html.ActionLink("Login", "Login", "Home")</a>
                    </li>
                    &nbsp;&nbsp;
                    <li class="nav-item">
                        <a class="nav-link">@Html.ActionLink("Home", "Index", "Home")</a>
                    </li>
                    &nbsp;&nbsp;
                    <li class="nav-item">
                        <a class="nav-link">@Html.ActionLink("About", "About", "Home")</a>
                    </li>
                    &nbsp;&nbsp;
                    <li class="nav-item">
                        <a class="nav-link">@Html.ActionLink("Contact", "Contact", "Home")</a>
                    </li>
                    &nbsp;&nbsp;
                    <li class="nav-item">
                        <a class="nav-link">@Html.ActionLink("Organizator", "Organizator", "Home")</a>
                    </li>
                    &nbsp;&nbsp;
                    <li class="nav-item">
                        <a class="nav-link">@Html.ActionLink("Client", "Client", "Home")</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    

    <div class="container body-content">
        <div>
            <br />
            @RenderBody()
        </div>

        <hr />


    </div>

    <div style="bottom:0;position: fixed; width:100%; background-color:#343a40 !important">
        <footer>
            <p style="color:aliceblue">DO IT Easy&copy; @DateTime.Now.Year </p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
